<h2>ペットを登録</h2>
<%= form_with model: @pet, local: true do |f| %>
  <div>
    <%= f.label :pets_name, "ペットの名前" %>
    <%= f.text_field :pets_name %>
  </div>
  <div>
    <%= f.label :kind, "種類" %>
    <%= f.text_field :kind %>
  </div>
  <div>
    <%= f.label :sex_id, "オス/メス" %> 
    <%= f.text_field :sex_id %>
  </div>
  <div class='input-birth-wrap'>
    <%= f.label :birthday, "誕生日" %>
    <%= f.date_select :birthday, 
                      use_month_numbers: true, 
                      start_year: 1930, 
                      end_year: (Time.now.year - 5), 
                      field_order: [:year, :month, :day], 
                      prompt: { year: '--', month: '--', day: '--' }, 
                      date_separator: '' %>
    <p>年</p> <p>月</p> <p>日</p>
  </div>
  <div class='input-birth-wrap'>
    <%= f.label :family_day, "家族になった日" %>
    <%= f.date_select :family_day, 
                      use_month_numbers: true, 
                      start_year: 1930, 
                      end_year: (Time.now.year - 5), 
                      field_order: [:year, :month, :day], 
                      prompt: { year: '--', month: '--', day: '--' }, 
                      date_separator: '' %>
    <p>年</p> <p>月</p> <p>日</p>
  </div>
  <div>
    <%= f.submit "登録する" %>
  </div>
<% end %>